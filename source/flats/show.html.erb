<!-- Access data.flats with owner's name as key -->
<% flat = data.flats[owner] %>


<!-- Inject flat data in template -->
<div class="flat-banner" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url(<%= flat.image %>);">
  <div class="banner-content">
    <h1><%= flat.description %></h1>
  </div>
</div>


<div class="info">
  <div class="main-info">
    <div class="user-info">
      <%= image_tag "https://kitt.lewagon.com/placeholder/users/#{owner}", class: "img-circle img-small" %>
      <p class="text-center"> <%= owner %> </p>
    </div>
    <div class="flat-info">
      <h4><%= flat.name %></h4>
      <h6><%= flat.city_name %></h6>
      <% flat.rating.times { %> <i class="rating fa fa-star" aria-hidden="true"></i> <% } %>
    </div>
  </div>
  <div class="form-info">
    <h4>Book this flat</h4>
    <form>
      <div class="form-group">
        <div class="row">
          <div class="col-xs-6">
            <input type="date" placeholder="checkin" id="checkin" class="form-control">
          </div>
          <div class="col-sm-6">
            <input type="date" placeholder="checkout" id="checkout" class="form-control">
          </div>
        </div>
      </div>
      <div class="row">
        <div class="col-sm-12 form-group">
          <select name="guests" id="" class="form-control">
            <option value="1">1 guest</option>
            <option value="2">2 guests</option>
            <option value="3">3 guests</option>
          </select>
        </div>
      </div>
      <input type="submit" value="Book it!" class="btn btn-danger" style="width: 100%;">
    </form>
  </div>
</div>
